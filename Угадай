from random import randrange

зад_число = randrange(1,10)
не_угадал = True
попытка = 1

print("\nЯ загадываю число, а Вы пытаетесь отгадать с трёх раз! Поехали!  ")

while попытка and (попытка <=3):
      ваше_число = input("Введите Ваше число " + str(попытка) + ":    ")
      if (int(ваше_число) == зад_число):
          print("Bingo!!! Вы угадали моё число! Это равно: ", зад_число)
          break
      else:
          print("Вы не угадали. Мое число между", зад_число - 2, " и ",
                зад_число + 2)
      попытка += 1

else:
    print("К сожалению Вы не смогли в этот раз угадать заданное число. Попробуйт
